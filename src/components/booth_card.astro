---
import {Image} from 'astro:assets';
import FontAwesomeIcon from './icon.astro';
import { faLocationDot , faTag} from '@fortawesome/free-solid-svg-icons'

interface ImageModule{
    default:ImageMetadata;
}

interface Props {
    id:number;
    title:string;
    group:string;
    place:string;
    describe:string;
    tags:string[];
    image?:ImageModule;
}

const {id , title , group , place , describe , tags , image}=Astro.props;
---
<div class="bc_all">
    <div class="bc_top">
        {image && (
            <Image id="bc_img" inferSize={true} src={image.default} alt={title} loading="lazy" />
        )}
        <div class="bc_topRight">
            <div>
                <h1>{title}</h1>
                <h3>{group}</h3>
            </div>
            <div class="bc_place"><FontAwesomeIcon icon={faLocationDot} params={{classes: ['fa-width-auto']}}/><span>{place}</span></div>
        </div>
    </div>
    <div class="bc_bottom">
        <div class="bc_describe">{describe}</div>
        <div class="bc_tag">
            {tags.map((tag)=>{
                return (<span><FontAwesomeIcon icon={faTag} params={{classes: ["fa-l"]}}></FontAwesomeIcon>
                        {tag}</span>);
            })}
        </div>
    </div>
</div>
<style>
.bc_all{
    /*width:320px;
    height:216px;*/
    border-top: 2px solid #182c66;
    border-bottom: 2px solid #182c66;
    font-family: sans-serif;
    *{
        margin:0;
        padding:0;
    }
}
.bc_top{
    height:80px;
    margin:12px 16px 0 16px;
    display:flex;
    gap:16px;
    margin-bottom: 8px;
    img{
        height:100%;
        width:auto;
    }
}
.bc_topRight{
    height:100%;
    display:flex;
    flex-direction: column;
    justify-content:space-between;
    /*タイトル*/
    h1{
        color:#333333;
        font-size: 16px;
    }
    /*グループ*/
    h3{
        color:#5a5a5a;
        font-size: 12px;
    }
}
.bc_place{
    color:black;
    font-size:14px;
    display:flex;
    align-items: baseline;
    gap:4px;
    cursor:pointer;
}
.bc_bottom{
    margin:0 16px 12px 16px;
    background-color: #182c66;
    color:#fefefe;
    width:272px;
    height:86px;
    padding:8px;
}
.bc_describe{
    font-size:14px;
    height:75%;
    white-space: pre-line;
    overflow: hidden;
    -webkit-line-clamp: 3;
}
.bc_tag{
    font-size:12px;
    height:25%;
    overflow: hidden;
    >*{
        padding-right:4px;
        cursor: pointer;
    }
}
</style>