---
import {Image} from 'astro:assets';
import FontAwesomeIcon from './icon.astro';
import { faLocationDot , faTag} from '@fortawesome/free-solid-svg-icons'

interface ImageModule{
    default:ImageMetadata;
}

interface BoothContent{
    title:string;
    group:string;
    place:string;
    describe:string;
    tags:string[];
}
interface Props {
    entry:BoothContent;
    image?:ImageModule;
}

const {entry , image}=Astro.props;
---
<div class="bc_all">
    <div class="bc_top">
        {image && (
            <Image id="bc_img" inferSize={true} src={image.default} alt={entry.title} loading="lazy" />
        )}
        <div class="bc_topRight">
            <div>
                <h1>{entry.title}</h1>
                <h3>{entry.group}</h3>
            </div>
            <div class="bc_place"><FontAwesomeIcon icon={faLocationDot} params={{classes: ['fa-width-auto']}}/><span>{entry.place}</span></div>
        </div>
    </div>
    <div class="bc_bottom">
        <div class="bc_describe">{entry.describe}</div>
        <div class="bc_tag">
            {entry.tags.map((tag)=>{
                return (<span><FontAwesomeIcon icon={faTag} params={{classes: ["fa-xl"]}}></FontAwesomeIcon>
                        {tag}</span>);
            })}
        </div>
    </div>
</div>
<style>
.bc_all{
    width:auto;
    border: 5px solid navy;
    border-radius: 25px;
    padding: 12px 16px;
    font-family: sans-serif;
    font-size:1em;
    margin-bottom: 20px;
    *{
        font-weight: normal;
        margin:0;
        padding:0;
    }
}
.bc_top{
    aspect-ratio: 3.5 / 1;
    display:flex;
    font-size:1em;
    width:100%;
    margin-bottom: 1.2em;
    img{
        width:auto;
        height:100%;
    }
}
.bc_topRight{
    height:100%;
    width:100%;
    display:flex;
    flex-direction: column;
    justify-content:space-between;
    padding-left: 1rem;
    /*タイトル*/
    h1{
        color:#333333;
        font-size: 2em;
    }
    /*グループ*/
    h3{
        color:#5a5a5a;
        font-size: 1.2em;
    }
}
.bc_place{
    color:black;
    font-size:1.4em;
    display:flex;
    align-items: baseline;
    gap:0.3em;
}
.bc_bottom{
    aspect-ratio: 3.5 / 1;
    background-color: navy;
    color:white;
    font-size:1em;
    width:95%;
    height:auto;
    padding:0.7rem;
}
.bc_describe{
    font-size:1.4em;
    height:75%;
    white-space: pre-line;
    overflow: hidden;
    text-overflow: ellipsis;
}
.bc_tag{
    font-size:1.4em;
    height:25%;
    overflow: hidden;
    text-overflow: ellipsis;
}
</style>